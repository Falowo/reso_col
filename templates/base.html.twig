
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('lib/boostrap/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
        <link href="https://fonts.googleapis.com/css?family=Poppins|Source+Sans+Pro&display=swap" rel="stylesheet">
        <script src="https://kit.fontawesome.com/8dac1fed2d.js" crossorigin="anonymous"></script>

    {% endblock %}
</head>
<body>


{% if is_granted("ROLE_ADMIN") %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
                <span class="navbar-brand mb-0 h1">
                    Admin
                </span>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarAdmin"
                    aria-controls="navbarAdmin" aria-expanded="false">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarAdmin">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_admin_community_index') }}">
                            Gestion community
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_admin_post_index') }}">
                            Gestion post
                        </a>
                    </li>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_admin_user_index') }}">
                            Gestion user
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_admin_comment_index') }}">
                            Gestion comment
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
{% endif %}
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
        <div class="collapse navbar-collapse">
            {% if app.user is not null %}
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link btn btn-primary btn-lg" href="{{ path('app_community_edit') }}">Créer un
                            groupe</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn btn-primary btn-lg" href="{{ path('app_wall_index') }}">Mon mur</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn btn-primary btn-lg" href="{{ path('app_user_register') }}">Modifier mon profil</a>
                    </li>
                </ul>
            {% endif %}
        </div>

        <ul class="navbar-nav">
            {% if app.user is null %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_user_register') }}">
                        Inscription
                    </a>

                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_user_login') }}">
                        Connexion
                    </a>
                </li>
            {% else %}
                <li class="nav-item">
                    <a class="nav-link nav-link-user">
                        {% if app.user.avatar is not null %}
                            <img src="{{ asset('images/'~ app.user.avatar) }}" alt="" class="nav-avatar rounded-circle">
                        {% endif %}
                        <span>{{ app.user }}</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_user_logout') }}">
                        Déconnexion
                    </a>
                </li>

            {% endif %}
        </ul>

    </div>

</nav>
<br>


<div class="container">
    {# affichage des messages flash #}
    {% for type, messages in app.session.flashBag.all %}
        {% for message in messages %}
            {# pour la classe alert-danger du bootstrap #}
            {% if type == 'error' %}
                {% set type='danger' %}
            {% endif %}
            <div class="alert alert-{{ type }} mt-2">
                {{ message|raw }}
            </div>
        {% endfor %}
    {% endfor %}



{% block body %}

{% endblock %}
</div>
{% block javascripts %}

    <script src="https://code.jquery.com/jquery-3.4.1.min.js"
            integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>

    <script src="{{ asset('lib/bootstrap/bootstrap.min.js') }}"></script>


{% endblock %}
</body>
</html>

