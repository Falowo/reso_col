<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}My-Community{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('lib/boostrap/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
    {% endblock %}
</head>
<body>


{% if is_granted("ROLE_ADMIN") %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
                <span class="navbar-brand mb-0 h1">
                    Admin
                </span>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarAdmin" aria-controls="navbarAdmin" aria-expanded="false">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarAdmin">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_admin_community_index') }}">
                            Gestion  community
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_admin_post_index') }}">
                            Gestion post
                        </a>
                    </li></li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_admin_user_index') }}">
                            Gestion user
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
{% endif %}




<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
        <div class="collapse navbar-collapse">
            {% if app.user is not null %}
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link btn btn-info btn-lg"  href="{{ path('app_community_edit') }}">Creer un groupe</a>
                    </a>
                </li>
            </ul>
            {% endif %}
        </div>

        <ul class="navbar-nav">
            {% if app.user is null %}
            <li class="nav-item">
                <a class="nav-link" href="{{ path('app_user_register') }}">
                    Inscription
                </a>

            <li class="nav-item">
                <a class="nav-link" href="{{ path('app_user_login') }}">
                    Connexion
                </a>
            </li>
            {% else %}
                <li class="nav-item">
                    <a class="nav-link">
                        <h5>{{ app.user.firstName }}</h5>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_user_logout') }}">
                        DÃ©connexion
                    </a>
                </li>
            {% endif %}
        </ul>





    </div>

</nav>



<div class="container">
{# affichage des messages flash #}
    {% for type, messages in app.session.flashBag.all  %}
        {% for message in messages %}
            {# pour la classe alert-danger du bootstrap #}
            {% if type == 'error' %}
                {% set type='danger' %}
            {% endif %}
            <div class="alert alert-{{ type }} mt-2">
               {{ message|raw }}
            </div>
        {% endfor %}
    {% endfor %}

</div>
<div class="container">
{% block body %}{% endblock %}
</div>
{% block javascripts %}

    <script src="https://code.jquery.com/jquery-3.4.1.min.js"
            integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>

    <script src="{{ asset('lib/bootstrap/bootstrap.min.js') }}"></script>


{% endblock %}
</body>
</html>
