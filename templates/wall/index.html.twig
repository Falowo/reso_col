                                <img class="avatar" width="100" height="100" src="{{ asset('images/' ~  user.avatar) }}"/>
                                <h3 style="color:#305480">{{ user }}</h3>
                            {% else %}
                                <img class="avatar" width="100" height="100" src="{{ asset('images/user.png') }}"/>
                                <h3 style="color:#305480">{{ user }}</h3>
                            {% endif %}
