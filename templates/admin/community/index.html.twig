{% extends 'base.html.twig' %}

{% block body %}

    <h1>Gestion communities</h1>


    <table class="table table-striped">

        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Image</th>
            <th>Owner</th>
            <th>Date cr√©ation</th>
            <th style="width: 400px"></th>
        </tr>
        {% for community in communities  %}
            <tr>
                <td>{{ community.id }}</td>
                <td>{{ community.name }}</td>
                <td> <img src="{{ asset('images/' ~ community.image) }}" width="40px"></td>
                <td>{{ community.owner }}</td>
                <td>{{ community.creationDate|date("d/m/Y") }}</td>
                <td>
                                       <a class="btn btn-success" href="{{ path('app_admin_community_posts', {'id': community.id}) }}">
                        Posts
                    </a>
                    <a class="btn btn-primary" href="{{ path('app_admin_community_users', {'id': community.id}) }}">
                        Users
                    </a>
                    <a href="{{ path('app_admin_community_delete', {'id': community.id}) }}"
                       class="btn btn-danger">
                        Supprimer
                    </a>

                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}

{% block title %}
    {{ parent() }} -admin-communities
{% endblock %}